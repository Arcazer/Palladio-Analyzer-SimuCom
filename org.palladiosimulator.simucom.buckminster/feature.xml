<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="org.palladiosimulator.simucom.buckminster"
      label="Palladio SimuCom Analyzer - Buckminster Feature"
      version="1.0.0"
      plugin="org.palladiosimulator.branding"
      license-feature="org.palladiosimulator.license"
      license-feature-version="1.0.0">

   <description url="https://sdqweb.ipd.kit.edu/wiki/SimuCom">
      Simulation framework for PCM instances. Uses Model-2-Text transformation
to generate a plugin which is executed directly using OSGi dynamic
loader.
   </description>

   <includes
         id="org.palladiosimulator.simucom.feature"
         version="0.0.0"/>

   <requires>
      <import plugin="org.junit"/>
      <import plugin="de.uka.ipd.sdq.simucomframework"/>
      <import plugin="org.palladiosimulator.recorderframework.sensorframework" version="2.0.1" match="greaterOrEqual"/>
      <import plugin="org.palladiosimulator.analyzer.workflow" version="1.0.0" match="greaterOrEqual"/>
      <import plugin="org.palladiosimulator.recorderframework" version="2.0.1" match="greaterOrEqual"/>
      <import plugin="org.apache.log4j"/>
      <import plugin="de.uka.ipd.sdq.probfunction.math"/>
      <import plugin="org.apache.commons.math"/>
      <import plugin="de.uka.ipd.sdq.simucomframework.variables"/>
   </requires>

   <plugin
         id="de.uka.ipd.sdq.codegen.simucontroller.tests"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="de.uka.ipd.sdq.simucomframework.variables.tests"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"
         unpack="false"/>

   <plugin
         id="org.palladiosimulator.branding"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
